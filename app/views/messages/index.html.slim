<link rel="stylesheet" type="text/css" href="styles/left-nav/styles.css">
<link rel="stylesheet" type="text/css" href="styles/cards/styles.css">
<link rel="stylesheet" type="text/css" href="jspm_packages/npm/font-awesome@4.7.0/css/font-awesome.min.css">

section aurelia-app="main"

  div.row
    div.col-xs-6
      table.table.table-striped
        thead
          tr
            th Title
            th Body
            th From
            th Received date
        tbody
          tr
            td
              input placeholder="title"
            td
              input placeholder="body"
            td
              input placeholder="from"
            td
              input placeholder="received date"

          - @from_messages.each do |message|
            tr
              td = message.title
              td = message.body
              - if message.from_user
                td = message.from_user.name
              td = message.created_at

    div.col-xs-6
      table.table.table-striped
        thead
          tr
            th Title
            th Body
            th To
            th Received date
        tbody
          tr
            td
              input placeholder="title"
            td
              input placeholder="body"
            td
              input placeholder="to"
            td
              input placeholder="received date"

          - @to_messages.each do |message|
            tr
              td = message.title
              td = message.body
              - if message.to_user
                td = message.to_user.name
              td = message.created_at

= javascript_include_tag '/jspm_packages/system.js'
= javascript_include_tag '/config.js'

javascript:
  System.import('aurelia-bootstrapper');
